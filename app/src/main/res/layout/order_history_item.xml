<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="horizontal"
    android:elevation="5dp"
    android:background="@drawable/layout_bg"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="142dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/numberOnList">

            <TextView
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:id="@+id/position"
                android:gravity="center"
                android:text="1."
                android:textSize="30dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/position"
                android:id="@+id/orderIdLabel"
                android:layout_centerHorizontal="true"
                android:text="ID:"
                android:gravity="center"
                android:textSize="15dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/orderIdLabel"
                android:id="@+id/orderID"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="#45"
                android:textSize="15dp"
                android:textStyle="bold"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/numberOnList"
            android:id="@+id/backgroundLine">

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/gray"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/backgroundLine"
            android:id="@+id/orderInfo">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/clientName"
                android:text="Szymon Czech"
                android:textStyle="bold"
                android:textSize="15dp"
                android:gravity="center_vertical"
                android:drawablePadding="8dp"
                android:padding="2dp"
                android:drawableStart="@drawable/person"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/clientName"
                android:id="@+id/city"
                android:text="Zawiercie"
                android:textStyle="bold"
                android:textSize="14dp"
                android:gravity="center_vertical"
                android:drawablePadding="10dp"
                android:padding="2dp"
                android:drawableStart="@drawable/city"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/city"
                android:id="@+id/address"
                android:text="Wyszyńskiego 2/20"
                android:textStyle="bold"
                android:textSize="15dp"
                android:gravity="center_vertical"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/location"
                android:padding="2dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/address"
                android:id="@+id/price"
                android:text="129.91 zł"
                android:textStyle="bold"
                android:textSize="15dp"
                android:gravity="center_vertical"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/money"
                android:padding="2dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/price"
                android:id="@+id/type"
                android:text="ZAMÓWIENIE"
                android:textStyle="bold"
                android:textSize="15dp"
                android:gravity="center_vertical"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/category"
                android:padding="2dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/orderInfo"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data utworzenia:"
                android:id="@+id/creationDateLabel"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="29.09.2023 17.54"
                android:layout_below="@+id/creationDateLabel"
                android:id="@+id/creationDate"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data zakończenia:"
                android:layout_below="@id/creationDate"
                android:id="@+id/realizationDateLabel"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="05.10.2023 13:41"
                android:layout_below="@+id/realizationDateLabel"
                android:id="@+id/realizationDate"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/realizationDate"
                android:text="ZAKOŃCZONE"
                android:textSize="10dp"
                android:id="@+id/isRealized"
                android:textStyle="bold"
                android:gravity="center"
                android:drawableStart="@drawable/check"
                />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>