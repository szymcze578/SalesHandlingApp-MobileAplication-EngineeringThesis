<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="horizontal"
    android:elevation="5dp"
    android:background="@drawable/layout_bg"
    >

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="120dp">

       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="120dp"
           android:id="@+id/numberOnList">

           <TextView
               android:layout_width="90dp"
               android:layout_height="match_parent"
               android:id="@+id/position"
               android:gravity="center"
               android:padding="15dp"
               android:text="1"
               android:textSize="40dp"
               android:textStyle="bold"/>

       </RelativeLayout>

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_toRightOf="@id/numberOnList">

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/clientName"
               android:text="Szymon Czech"
               android:textStyle="bold"
               android:textSize="15dp"
               android:gravity="center_vertical"
               android:drawablePadding="10dp"
               android:padding="3dp"
               android:drawableStart="@drawable/person"/>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@+id/clientName"
               android:id="@+id/phoneNumber"
               android:text="+48608862105"
               android:textStyle="bold"
               android:textSize="15dp"
               android:gravity="center_vertical"
               android:drawablePadding="10dp"
               android:padding="3dp"
               android:drawableStart="@drawable/phone"/>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@+id/phoneNumber"
               android:id="@+id/city"
               android:text="Zawiercie"
               android:textStyle="bold"
               android:textSize="15dp"
               android:gravity="center_vertical"
               android:drawablePadding="10dp"
               android:padding="3dp"
               android:drawableStart="@drawable/city"/>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@+id/city"
               android:id="@+id/address"
               android:text="WyszyÅ„skiego 2/20"
               android:textStyle="bold"
               android:textSize="15dp"
               android:gravity="center_vertical"
               android:drawablePadding="10dp"
               android:drawableStart="@drawable/location"
               android:padding="3dp"/>
       </RelativeLayout>

   </RelativeLayout>

</LinearLayout>